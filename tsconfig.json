{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "esnext",
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    // linter checks
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
